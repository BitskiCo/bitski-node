{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/types/*"]
    }
  },
  "include": ["src"]
}
